li.todo-item.box(id='todo-' + todo.id, class={completed: todo.completed === true})

    .todo-item-content
        p #{todo.name}

    .todo-item-actions
        if todo.completed
            button.button.is-rounded.is-info.is-light(hx-patch='/todos/mark-as-uncompleted/' + todo.id, hx-target='#todo-' + todo.id, hx-swap='outerHTML')
                span &#129052;
        else
            button.button.is-rounded.is-success(hx-patch='/todos/mark-as-completed/' + todo.id, hx-target='#todo-' + todo.id, hx-swap='outerHTML')
                span &check;

        button.todo-item-delete-button.button.is-rounded.is-danger.is-outlined(hx-delete='/todos/' + todo.id, hx-target='#todo-' + todo.id, hx-swap='outerHTML')
            span &#128473;
    