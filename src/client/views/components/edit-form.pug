form#edit-form.edit-todo-form.box(hx-post='/todos/update/' + todo.id, hx-swap='outerHTML')

    input.input.edit-todo-form-input(type='text', required='true', name='todoName', value=todo.name)

    button.edit-todo-form-button.button.is-success(type='submit') save

    button.edit-todo-form-button.button.is-light(hx-post='/todos/cancel-edit/' + todo.id, hx-target='#edit-form') cancel